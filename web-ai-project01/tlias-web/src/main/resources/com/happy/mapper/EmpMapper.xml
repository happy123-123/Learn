<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.happy.mapper.EmpMapper">
    <insert id="insertEmp">
        insert into emp(username,password,name,gender,phone,job,salary,image,entry_date,dept_id,create_time,update_time)
        values(#{username},#{password},#{name},#{gender},#{phone},#{job},#{salary},#{image},#{entryDate},#{deptId},#{createTime},#{updateTime})
    </insert>

    <update id="updateEmp">
        update emp
        <set>
            <if test="username != null and username !='' ">username = #{username},</if>
            <if test="password != null and password !=''">password = #{password},</if>
            <if test="name != null and name !=''">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="phone != null and phone !=''">phone = #{phone},</if>
            <if test="job != null">job = #{job},</if>
            <if test="salary != null">salary = #{salary},</if>
            <if test="image != null and image !=''">image = #{image},</if>
            <if test="entryDate != null">entry_date = #{entryDate},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        where id=#{id}
    </update>


    <delete id="deleteEmp">
        delete dept from dept left join emp on dept.id=emp.dept_id where emp.dept_id is null and dept.id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="findALL" resultType="com.happy.pojo.Emp">
        select e.*,d.name deptName from emp e left join dept d on e.dept_id=d.id
        <where>
            <if test="name != null and name !=''">
                e.name like concat(#{name},'%')
            </if>
            <if test="gender != null">
                e.gender=#{gender}
            </if>
            <if test="begin != null and end !=null">
                e.entry_date between #{begin} and #{end}
            </if>
        </where>
        order by e.update_time desc limit #{page},#{pageSize}
    </select>
    <select id="findBackEmp" resultType="com.happy.pojo.Emp">
        select * from emp where id=#{id}
    </select>
    <select id="findGender" resultType="com.happy.pojo.Gender">
        select (case gender when 1 then '男' when 2 then '女' end) name,count(gender) value from emp group by gender
    </select>
