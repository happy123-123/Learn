    <select id="findJobOption" resultType="java.util.Map">
            select (case job when 1 then '班主任'
                             when 2 then '讲师'
                             when 3 then '学工主管'
                             when 4 then '教研主管'
                             when 5 then '咨询师' else '其他' end) pos,
                   count(*) num from emp group by job order by num
    </select>
    <select id="findEmpList" resultType="com.happy.pojo.Emp">
        select * from emp
    </select>
    <select id="loginEmp" resultType="com.happy.pojo.LoginInfo">
        select * from emp where username=#{username} and password=#{password}
    </select>

</mapper>