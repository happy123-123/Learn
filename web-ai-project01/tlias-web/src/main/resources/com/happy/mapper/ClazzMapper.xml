<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.happy.mapper.ClazzMapper">
    <insert id="add">
        insert into clazz(name,room,begin_date,end_date,master_id,subject) values(#{name},#{room},#{beginDate},#{endDate},#{masterId},#{subject})
    </insert>

    <update id="update">
        update clazz
        <set>
            <if test="name != null and name !=''">name=#{name},</if>
            <if test="room != null and room !=''">room= #{room},</if>
            <if test="beginDate != null">begin_date= #{beginDate},</if>
            <if test="endDate != null">end_date= #{endDate},</if>
            <if test="masterId != null">master_id= #{masterId},</if>
            <if test="subject != null and subject !=''">subject= #{subject},</if>
            <if test="createTime != null">create_time= #{createTime},</if>
            <if test="updateTime != null">update_time= #{updateTime}</if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from clazz where id=#{id}
    </delete>

    <select id="findAll" resultType="java.lang.Long">
        select count(*) from clazz
    </select>

    <select id="find" resultType="com.happy.pojo.Clazz">
        SELECT *,
        IF(NOW() > end_date, '已结课',
        IF(NOW() &lt; begin_date, '未开班', '在读中')
        ) AS status
        FROM clazz
        <where>
            <if test="name != null and name !=''">
                name like concat(#{name},'%')
            </if>
            <if test="begin != null and end !=null">
                end_date between #{begin} and #{end}
            </if>
        </where>
        limit #{page},#{pageSize}
    </select>

    <select id="findById" resultType="com.happy.pojo.Clazz">
        select * from clazz where id=#{id}
    </select>

    <select id="findClazzList" resultType="com.happy.pojo.Clazz">
        select * from clazz
    </select>
    <select id="linkClazz" resultType="java.lang.Integer">
        select count(*) from clazz left join student on clazz.id=student.clazz_id where student.clazz_id=#{id}
    </select>
</mapper>