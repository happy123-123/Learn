<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorsMapper">
    <insert id="addDishFlavor">
        insert into sky_take_out.dish_flavor (dish_id, name, value) values
        <foreach collection="flavors" item="flavor" separator=",">
            (#{flavor.dishId},#{flavor.name},#{flavor.value})
        </foreach>
    </insert>

    <update id="controlAll">
        update sky_take_out.dish_flavor set status = #{status} where dish_id = #{id}
    </update>
    <delete id="deleteAll">
        delete from sky_take_out.dish_flavor where dish_id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <delete id="deleteByDishId">
        delete from sky_take_out.dish_flavor where dish_id = #{dishId}
    </delete>
    <select id="findAllById" resultType="com.sky.entity.DishFlavor">
        select * from sky_take_out.dish_flavor where dish_id = #{dishId}
    </select>
</mapper>